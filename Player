package ui;

/**
 *
 * @author Nick
 */
public class Player {

    private String name;
    private int health;

    public Player(String name, int health) {
        this.name = name;
        this.health = health;
    }

    public String getName() {
        return name;
    }

    public void addHealth(int addHealth) {
        this.health += addHealth;
    }
    
    public void subtractHealth(int subtractHealth){
        this.health -= subtractHealth;
    }
    
    public int getHealth() {
        return health;
    }

    @Override
    public String toString() {
        return "Name: " + name + " Health: " + health;
    }

}
